<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lite"
    android:orientation="vertical"
    tools:context="com.example.achal.doctors.window">


    <Button
        android:id="@+id/cancel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/ic_cancel_24dp" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/deep"
        android:gravity="center"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/qaTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/deep"
        android:gravity="center"
        android:padding="5dp"
        android:text="Qualification: MBBS(India), Mphil PATH, FCPS"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/chamberTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoLink="map"
        android:background="@color/deep"
        android:gravity="center"
        android:linksClickable="true"
        android:padding="5dp"
        android:text="Chamber:\nDhanmondi Medical College and Research Facility"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/expTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/deep"
        android:gravity="center"
        android:padding="5dp"
        android:text="Expertse: Hematology"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cityTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/deep"
        android:gravity="center"
        android:padding="5dp"
        android:text="Location: Dhaka"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/conTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/deep"
        android:gravity="center"
        android:padding="5dp"
        android:text="Contact: 01XXXXXX"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15sp" />
    <Button

        android:id="@+id/call"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Call for Appointment"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/gmap"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="Open in Maps"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

</LinearLayout>
